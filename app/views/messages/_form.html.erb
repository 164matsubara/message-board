<%= form_for(@message) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>

<div class="input-group">
  <span class="input-group-addon">名前:</span><%= f.text_field :name , class: "form-control" %>
</div>
</br>
<div class="input-group">
  <span class="input-group-addon">年齢:</span><%= f.text_field :age , class: "form-control" %>
</div>
</br>
<div class="input-group">
  <span class="input-group-addon">内容:</span><%= f.text_area :body , class: "form-control" %>
</div>
</br>

  <%= f.submit class: "btn btn-sm btn-primary" %>
<% end %>
</div>
